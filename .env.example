# ===========================================
# LoveIQ Environment Variables
# Copy this file to .env.local and fill in values
# ===========================================

# Site URL (used for metadata, sitemap, canonical URLs)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# -------------------------------------------
# Supabase (waitlist storage)
# -------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# -------------------------------------------
# Resend (transactional emails)
# -------------------------------------------
RESEND_API_KEY=re_your_api_key
RESEND_FROM=LoveIQ <hello@send.loveiq.org>
RESEND_REPLY_TO=hello@loveiq.org

# -------------------------------------------
# Google reCAPTCHA v2 (contact form)
# -------------------------------------------
# Get keys at: https://www.google.com/recaptcha/admin
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-site-key
RECAPTCHA_SECRET_KEY=your-secret-key

# -------------------------------------------
# Slack Webhooks (notifications)
# -------------------------------------------
# Optional: Leave empty to disable Slack notifications
SLACK_WAITLIST_WEBHOOK_URL=
SLACK_CONTACT_WEBHOOK_URL=

# -------------------------------------------
# Contact Form
# -------------------------------------------
CONTACT_TO_EMAIL=hello@loveiq.org
